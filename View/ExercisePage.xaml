<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MacroTracker.View.ExercisePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MacroTracker.View"
    xmlns:model="using:MacroTracker.Model"
    xmlns:helper="using:MacroTracker.Helper.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <helper:ExerciseFileNameToPathConverter x:Key="ExerciseFileNameToPathConverter"/>
    </Page.Resources>

    <Grid 
        Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Column="0"
            Background="#20808080"
            Margin="10"
            CornerRadius="10">
            
            <TextBlock 
                Text="Exercise"
                FontSize="24"
                Margin="20 10 0 0"/>
            
        </StackPanel>

        <Grid
            Grid.Column="1"
            Background="#30909090"
            Margin="10"
            CornerRadius="10">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Text="Exercises"
                FontSize="30"
                Margin="20 10 0 0"/>

            <ScrollViewer
                Grid.Row="1">
                
                    <ListBox
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        Background="#00909090"
                        ItemsSource="{x:Bind ViewModel.Exercises,
                                             Mode=OneWay}"
                        Height="Auto">

                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="model:ExerciseInfo">
                                <StackPanel
                                    Margin="20"
                                    Orientation="Horizontal">

                                    <Image
                                        Source="{x:Bind IconFileName,
                                                        Mode=OneWay,
                                                        Converter={StaticResource ExerciseFileNameToPathConverter}}"
                                        Width="40"
                                        Height="40"
                                        Margin="0 0 20 0"
                                        VerticalAlignment="Center"/>

                                    <TextBlock
                                        Text="{x:Bind Name}"
                                        FontSize="20"
                                        Margin="0 0 0 0"
                                        VerticalAlignment="Center"/>

                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
            </ScrollViewer>

        </Grid>

    </Grid>
</Page>
